{
  "devDependencies": {
    "elm-live": "^4.0.2",
    "sass": "^1.35.2",
    "uglify-js": "^3.13.10"
  },
  "scripts": {
    "start": "yarn elm-live src/Main.elm -- -- --optimize --output=elm.js",
    "watch-sass": "yarn sass ./sass/main.scss ./style.css -w",
    "build-sass": "yarn sass ./sass/main.scss ./style.min.css --style compressed",
    "build": "elm make src/Main.elm --optimize --output=elm.js",
    "minify": "uglifyjs elm.js --compress 'pure_funcs=[F2,F3,F4,F5,F6,F7,F8,F9,A2,A3,A4,A5,A6,A7,A8,A9],pure_getters,keep_fargs=false,unsafe_comps,unsafe' | uglifyjs --mangle --output elm.min.js"
  }
}
